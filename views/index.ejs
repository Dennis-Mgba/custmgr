<%- include('partials/header'); %>
    <main>
        <!-- <h3 class="content-head"><%= title %></h3> -->

        <section>
            <table>
              <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Number</th>
                    <th scope="col"></th>
                </tr>
              </thead>

              <tbody>
                <% users.forEach( function(user) { %>
                <tr>
                    <td scope="row" data-label="Name"><%= user.first_name %> <%= user.last_name %></td>
                    <td data-label="Email"><%= user.email %></td>
                    <td data-label="Number"><%= user.number %></td>
                    <td class="table-btns">
                        <!-- <button type="button" class="btn btn-warning">Edit</button> -->
                        <button type="button" class="btn btn-danger deleteUser" data-id="<%= user._id %>">Delete</button>
                    </td>
                </tr>
                <%})%>
              </tbody>
            </table>

            <p class="form-toggle">Toggle Form</p>
        </section>

        <section class="form-section">
            <form class="add-form" method="post" action="/users/add">
                <h5 class="form-sub-head">Customer Details</h5>

                <span>  <!-- errors -->
                    <% if (typeof alert != 'undefined') { %>
                        <% alert.forEach( (error) => { %>
                            <div class="alert alert-warning alert-dismissible" role="alert">
                              <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                              <strong>Warning!</strong>  <%= error.mgs %>
                            </div>
                       <% }); %>
                    <% } %>
                </span>

                <div class="form-row">
                    <div class="form-group col-md-6">
                      <label for="First Name">First Name</label>
                      <input type="text" class="form-control" placeholder="First Name" id="first_name" name="first_name" value="">
                    </div>
                    <div class="form-group col-md-6">
                      <label for="Last Name">Last Name</label>
                      <input type="text" class="form-control" placeholder="Last Name" id="last_name" name="last_name" value="">
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="email">Email</label>
                        <input type="Email" class="form-control" placeholder="Email" id="email" name="email" value="">
                    </div>
                    <div class="form-group col-md-6">
                      <label for="Phone Number">Phone Number</label>
                      <input type="text" class="form-control" placeholder="Phone Number" id="number" name="number" value="">
                    </div>
                </div>

              <button type="submit" class="btn btn-primary" value="submit">Add Customer</button>
            </form>
        </section>
    </main>
<%- include('partials/footer'); %>
